      "title": "Requirements",
      "number": "6.2"
    },
    {
      "id": "req_latlong",
      "level": 4,
      "title": "The Geolocation API must provide location data in terms of a pair of latitude and longitude coordinates.",
      "number": "6.2.1"
    },
    {
      "id": "req_accuracy",
      "level": 4,
      "title": "The Geolocation API must provide information about the accuracy of the retrieved location data.",
      "number": "6.2.2"
    },
    {
      "id": "req_oneshot",
      "level": 4,
      "title": "The Geolocation API must support \"one-shot\" position updates.",
      "number": "6.2.3"
    },
    {
      "id": "req_updates",
      "level": 4,
      "title": "The Geolocation API must allow an application to register to receive updates when the position of the hosting device changes.",
      "number": "6.2.4"
    },
    {
      "id": "req_last_known",
      "level": 4,
      "title": "The Geolocation API must allow an application to request a cached position whose age is no greater than a specified value.",
      "number": "6.2.5"
    },
    {
      "id": "req_errors",
      "level": 4,
      "title": "The Geolocation API must provide a way for the application to receive updates about errors that may have occurred while obtaining a location fix.",
      "number": "6.2.6"
    },
    {
      "id": "req_request_acuracy",
      "level": 4,
      "title": "The Geolocation API must allow an application to specify a desired accuracy level of the location information.",
      "number": "6.2.7"
    },
    {
      "id": "req_source_agnostic",
      "level": 4,
      "title": "The Geolocation API must be agnostic to the underlying sources of location information.",
      "number": "6.2.8"
    },
